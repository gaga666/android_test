<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".edit.write_blog">

    <EditText
        android:id="@+id/write_edittext"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/write_recyclerView"
        android:layout_below="@+id/write_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/write_imageAdd"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/write_recyclerView"
        android:src="@drawable/add_sel" />
</RelativeLayout>